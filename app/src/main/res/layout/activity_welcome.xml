<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintRight_toLeftOf="@id/tvProduct"
        android:gravity="center"
        android:background="@color/cardview_shadow_start_color"
        app:layout_constraintHorizontal_weight="2"
        android:text="categoryList"/>
    <TextView
        android:id="@+id/tvProduct"
        android:layout_width="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvCategory"
        android:layout_height="wrap_content"
        android:text="ProductList"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listCategorys"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="10dp"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/listProducts"
        app:layout_constraintTop_toBottomOf="@id/tvCategory"
        android:background="@color/cardview_shadow_start_color"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listProducts"
        android:layout_width="0dp"
        android:paddingBottom="10dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/listCategorys"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProduct"
        />
</androidx.constraintlayout.widget.ConstraintLayout>